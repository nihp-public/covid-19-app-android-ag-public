<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <uk.nhs.nhsx.covid19.android.app.widgets.ParagraphsContainer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_small"
        app:rawText="@string/isolation_hub_accordion_how_to_self_isolate_paragraph_1" />

    <uk.nhs.nhsx.covid19.android.app.widgets.BulletedParagraphsContainer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin"
        app:rawText="@string/isolation_hub_accordion_how_to_self_isolate_paragraph_2" />

    <uk.nhs.nhsx.covid19.android.app.widgets.ParagraphsContainer
        style="@style/Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin"
        app:rawText="@string/isolation_hub_accordion_how_to_self_isolate_paragraph_3" />

    <uk.nhs.nhsx.covid19.android.app.widgets.BulletedParagraphsContainer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin"
        app:rawText="@string/isolation_hub_accordion_how_to_self_isolate_paragraph_4" />

    <TextView
        style="@style/Body1.SecondaryTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin"
        android:text="@string/isolation_hub_accordion_how_to_self_isolate_links_subheading" />

    <uk.nhs.nhsx.covid19.android.app.widgets.LinkTextView
        style="@style/LinkText.WithIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_small"
        android:text="@string/isolation_hub_accordion_how_to_self_isolate_link_1_title"
        app:linkUrl="@string/url_latest_government_guidance" />

    <uk.nhs.nhsx.covid19.android.app.widgets.LinkTextView
        style="@style/LinkText.WithIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_small"
        android:text="@string/isolation_hub_accordion_how_to_self_isolate_link_2_title"
        app:linkUrl="@string/url_local_authority" />

</LinearLayout>