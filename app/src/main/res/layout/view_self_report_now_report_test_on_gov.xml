<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <uk.nhs.nhsx.covid19.android.app.widgets.HeadingTextView
        android:id="@+id/selfReportNotReportedTitle"
        style="@style/Title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/vertical_margin_large"
        android:text="@string/self_report_advice_not_reported_result_header"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin"
        android:background="@drawable/view_cornered_background"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="@dimen/vertical_margin">

        <uk.nhs.nhsx.covid19.android.app.widgets.LinkTextView
            style="@style/LinkText.WithIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/paragraph_container_padding_between_items_default"
            android:text="@string/self_report_advice_info_section_url_label"
            app:linkUrl="@string/self_report_advice_primary_link_button_url" />

        <uk.nhs.nhsx.covid19.android.app.widgets.ParagraphsContainer
            style="@style/Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rawText="@string/self_report_advice_info_section_description"/>

    </LinearLayout>

    <uk.nhs.nhsx.covid19.android.app.widgets.HeadingTextView
        android:id="@+id/selfReportAdviceNotReportedSubTitle"
        style="@style/Title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_margin_medium"
        tools:text="@string/self_report_advice_reported_result_out_of_isolation_header"/>

</LinearLayout>