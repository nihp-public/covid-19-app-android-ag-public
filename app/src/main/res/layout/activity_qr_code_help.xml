<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/primaryToolbar" layout="@layout/view_toolbar_primary" />

    <ScrollView
        style="@style/ScrollContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/margin_horizontal"
            android:paddingTop="@dimen/vertical_margin"
            android:paddingBottom="@dimen/vertical_margin_extra_large">

            <uk.nhs.nhsx.covid19.android.app.widgets.HeadingTextView
                android:id="@+id/qrCodeHelpTitle"
                style="@style/Title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/qr_code_help_how_it_works" />

            <TextView
                style="@style/Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:text="@string/qr_code_help_how_it_works_text" />

            <uk.nhs.nhsx.covid19.android.app.widgets.HeadingTextView
                style="@style/Title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_medium"
                android:text="@string/qr_code_help_how_to_scan_title" />

            <TextView
                style="@style/Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:text="@string/qr_code_help_how_to_scan_text" />

            <uk.nhs.nhsx.covid19.android.app.widgets.HeadingTextView
                style="@style/Title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_medium"
                android:text="@string/qr_code_help_title" />

            <TextView
                style="@style/Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:text="@string/qr_code_help_text" />

            <uk.nhs.nhsx.covid19.android.app.widgets.HeadingTextView
                style="@style/Title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_medium"
                android:text="@string/qr_code_help_about_qr_code_title" />

            <TextView
                style="@style/Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:text="@string/qr_code_help_about_qr_code_text" />

            <uk.nhs.nhsx.covid19.android.app.widgets.HeadingTextView
                style="@style/Title3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_medium"
                android:text="@string/qr_code_help_official_nhs_posters_title" />

            <TextView
                style="@style/Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:text="@string/qr_code_help_poster_title_hospitality" />

            <ImageView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/vertical_margin"
                android:adjustViewBounds="true"
                android:contentDescription="@string/qr_code_help_poster_content_description_hospitality"
                android:scaleType="centerInside"
                android:src="@drawable/qr_code_help_poster_hospitality" />

            <TextView
                style="@style/Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:text="@string/qr_code_help_poster_title_hospitality_welsh" />

            <ImageView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/vertical_margin"
                android:adjustViewBounds="true"
                android:contentDescription="@string/qr_code_help_poster_content_description_hospitality_welsh"
                android:scaleType="centerInside"
                android:src="@drawable/qr_code_help_poster_hospitality_welsh" />

            <TextView
                style="@style/Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:text="@string/qr_code_help_poster_title_english" />

            <ImageView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/vertical_margin"
                android:adjustViewBounds="true"
                android:contentDescription="@string/qr_code_help_poster_content_description_english"
                android:scaleType="fitStart"
                android:src="@drawable/qr_code_help_poster" />

            <TextView
                style="@style/Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin"
                android:text="@string/qr_code_help_poster_title_welsh" />

            <ImageView
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/vertical_margin"
                android:adjustViewBounds="true"
                android:contentDescription="@string/qr_code_help_poster_content_description_welsh"
                android:scaleType="fitStart"
                android:src="@drawable/qr_code_help_poster_welsh" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
