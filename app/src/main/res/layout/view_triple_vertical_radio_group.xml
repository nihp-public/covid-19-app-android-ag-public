<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/vertical_margin_large"
    android:paddingHorizontal="@dimen/margin_horizontal_reduced_relative">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_not_selected_background">

            <RadioButton
                android:id="@+id/tripleVerticalRadioButtonOption1"
                style="@style/Title3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:paddingVertical="15dp"
                android:paddingStart="6dp"
                android:paddingEnd="15dp"
                tools:text="@string/self_report_test_type_radio_button_option_positive"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_small"
            android:background="@drawable/radio_not_selected_background">

            <RadioButton
                android:id="@+id/tripleVerticalRadioButtonOption2"
                style="@style/Title3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:paddingVertical="15dp"
                android:paddingStart="6dp"
                android:paddingEnd="15dp"
                tools:text="@string/self_report_test_type_radio_button_option_negative" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_margin_small"
            android:background="@drawable/radio_not_selected_background">

            <RadioButton
                android:id="@+id/tripleVerticalRadioButtonOption3"
                style="@style/Title3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:paddingVertical="15dp"
                android:paddingStart="6dp"
                android:paddingEnd="15dp"
                tools:text="@string/self_report_test_type_radio_button_option_void" />
        </FrameLayout>
</RadioGroup>