<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:orientation="horizontal"
    tools:parentTag="android.widget.LinearLayout">

    <ImageView
        android:id="@+id/policyIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="16dp"
        tools:src="@drawable/ic_policy_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <uk.nhs.nhsx.covid19.android.app.widgets.HeadingTextView
            android:id="@+id/policyItemHeading"
            style="@style/Title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Meeting people" />

        <TextView
            android:id="@+id/policyItemContent"
            style="@style/Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Rule of six indoors and outdoors, in all settings." />
    </LinearLayout>

</merge>