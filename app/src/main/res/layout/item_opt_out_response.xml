<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="@dimen/vertical_margin">

    <uk.nhs.nhsx.covid19.android.app.widgets.HeadingTextView
        android:id="@+id/optOutQuestion"
        style="@style/Title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        tools:text="Are you fully vaccinated against COVID-19?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/optOutAnswerIcon"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:contentDescription="@null"
            tools:src="@drawable/ic_tick_green" />

        <TextView
            android:id="@+id/optOutAnswerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            tools:text="@string/exposure_notification_age_option1_text" />
    </LinearLayout>

    <include
        android:id="@+id/responseItemDivider"
        layout="@layout/view_divider" />

</LinearLayout>